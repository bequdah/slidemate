rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Users collection: document ID is the user's EMAIL
    match /users/{userEmail} {
      // Allow read/write if the signed-in user's email matches the document ID
      allow read, write: if isSignedIn() && request.auth.token.email == userEmail;
      
      // Slides subcollection
      match /slides/{slideId} {
        allow read, write: if isSignedIn() && request.auth.token.email == userEmail;
      }
      
      // Chats subcollection
      match /chats/{chatId} {
        allow read, write: if isSignedIn() && request.auth.token.email == userEmail;
      }

      // Analyses cache
      match /analyses/{analysisId} {
        allow read, write: if isSignedIn() && request.auth.token.email == userEmail;
      }
    }
  }
}
